{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": ["packages/*/**/*.ts"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "noImplicitAny": false,
    "removeComments": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "types/*": ["packages/types/*"],
      "shared/*": ["packages/shared/*"],
    }
  }
}
