{
  "git": false,
  "hooks": {
    "before:init": ["pnpm build"],
    "after:bump": "echo Successfully released ${name} v${version}."
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true,
      "strictSemVer": true,
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug fixes"
          },
          {
            "type": "chore",
            "section": "Chores"
          },
          {
            "type": "refactor",
            "section": "Refactors"
          },
          {
            "type": "doc",
            "section": "Docs"
          },
          {
            "type": "style",
            "section": "Styles"
          }
        ]
      }
    },
    "@release-it/bumper": {
      "out": {
        "file": "package.json",
        "path": ["dependencies.@rhao/request-utils"]
      }
    }
  }
}
